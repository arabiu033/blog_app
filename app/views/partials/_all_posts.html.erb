<section class='posts'>
  <%@posts.each_with_index do |post, i| %>
    <p class='full-post'><%= link_to "post #{i+1}", user_post_path(@user, post, :num => i+1) %></p>
    <p><%= post.text%></p>
    <p class='num_of_posts'>Comments: <%=post.comments_counter%>, Likes: <%=post.likes_counter%></p>
    <div>
      <% post.post_comments.each do |comment| %>
        <p class='comment'><strong><%= comment.author.name%></strong>: <%= comment.text.split(' ')[0] %></p>
      <% end %>
    </div>
  <% end %>
</section>